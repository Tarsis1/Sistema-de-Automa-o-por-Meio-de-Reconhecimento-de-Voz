char cmd;

void setup() {
  Serial.begin(9600);         //Inicia o Monitor Serial
  pinMode(4, OUTPUT);         //Define o pino como sa√≠da
  digitalWrite(4, LOW); 
}

void loop() {
  cmd = Serial.read();        //Realiza a leitura do serial
  if (cmd == 'l') {           //Se o comando for "l", liga o led
    digitalWrite(4, HIGH); 
  }
}
